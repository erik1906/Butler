        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/txtProd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Products.."
        android:padding="10dp" />
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
